void createMsg(char* s)
{
  s[0] = '\0';
  String tmp = "{\"temp\": " + String(temp) + ",\"hum\": " + String(hum) + "}";
  strcat(s, String(tmp).c_str());
  Serial.println(s);
  return;
}
